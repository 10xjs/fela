{
  "private": true,
  "version": "4.2.3",
  "description": "Full-Featured Universal, Dynamic & High-Performance Styling in JavaScript",
  "repository": "https://github.com/rofrischmann/fela/",
  "author": "Robin Frischmann",
  "license": "MIT",
  "scripts": {
    "babel": "babel -d packages/fela/lib modules",
    "check": "mocha --opts test/_setup/mocha.opts",
    "dist": "cross-env NODE_ENV=production babel-node scripts/buildPackages && cross-env NODE_ENV=development babel-node scripts/buildPackages",
    "docs": "gitbook install && gitbook build && gh-pages -d _book",
    "flow": "flow",
    "lint": "eslint modules",
    "precommit": "npm run lint && npm test && npm run flow",
    "prepare": "npm run precommit && npm run babel && npm run dist",
    "release": "npm run prepare && ./scripts/publishPackages.sh && npm run docs",
    "test": "istanbul cover node_modules/mocha/bin/_mocha -- --opts test/_setup/mocha.opts"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.0",
    "babel-core": "^6.6.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.9.1",
    "babel-plugin-transform-dev-warning": "^0.1.0",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "cross-env": "^1.0.8",
    "cssbeautify": "^0.3.1",
    "eslint": "^3.14.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "express": "^4.13.4",
    "express-http-proxy": "^0.6.0",
    "flow-bin": "^0.36.0",
    "fs-extra": "^0.30.0",
    "gh-pages": "^0.11.0",
    "gzip-js": "^0.3.2",
    "inline-style-prefixer": "^2.0.1",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "react": "^15.3.2",
    "rollup": "0.26.3",
    "rollup-plugin-babel": "2.4.0",
    "rollup-plugin-commonjs": "2.2.1",
    "rollup-plugin-node-resolve": "1.5.0",
    "rollup-plugin-uglify": "0.3.1",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "unitless-css-property": "^1.0.1"
  }
}
